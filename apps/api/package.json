{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest --detectOpenHandles",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/main.ts\" -e .ts",
    "dev:old": "ts-node-dev --transpile-only --no-notify ./src/main.ts",
    "start": "node ./dist/main.js",
    "build": "tsc",
    "lint": "tsc --noEmit && TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "db:seed": "yarn prisma db seed",
    "db:generate": "yarn prisma generate",
    "db:push": "yarn prisma db push"
  },
  "devDependencies": {
    "@boost/module": "^4.0.0",
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "^3.2.1",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typescript": "^2.7.4",
    "@graphql-codegen/typescript-operations": "^2.5.4",
    "@graphql-codegen/typescript-react-apollo": "^3.3.4",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.2",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.33.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "scripts": "*",
    "ts-node-dev": "^2.0.0",
    "tsconfig": "*",
    "typescript": "^4.8.4"
  },
  "jest": {
    "preset": "scripts/jest/node"
  },
  "dependencies": {
    "@apollo/server": "^4.4.0",
    "@pothos/core": "^3.22.5",
    "@pothos/plugin-prisma": "^3.53.0",
    "@prisma/client": "^5.2.0",
    "body-parser": "^1.19.2",
    "cloudinary": "^1.37.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "logger": "*",
    "prisma": "^5.2.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  }
}
